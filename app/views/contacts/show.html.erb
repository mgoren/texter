<h1><%= @contact.name %></h1>

<% if @contact.avatar_file_name %>
  <%= image_tag @contact.avatar.url(:thumb) %>
<% end %>

<h3><%= link_to @contact.phone, new_message_path({phone: @contact.phone}) %></h3>
<%= link_to "Edit", edit_user_contact_path(@contact.user, @contact) %> |
<%= link_to "Delete", user_contact_path(@contact.user, @contact), method: :delete %>

<h3>Message History</h3>
<ul class="list-unstyled">
  <%= render @contact.messages %>
</ul>
